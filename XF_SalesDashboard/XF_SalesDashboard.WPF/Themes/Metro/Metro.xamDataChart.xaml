  </DataTemplate>

  <!-- PieChartLegendItemBadge-->
  <DataTemplate x:Key="PieChartLegendItemBadgeTemplate">
    <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding}">
      <ContentPresenter.ContentTemplate>
        <DataTemplate>
          <Rectangle Stroke="{Binding Slice.BorderBrush}" Fill="{Binding Slice.Background}" StrokeThickness="{Binding Slice.StrokeThickness}" />
        </DataTemplate>
      </ContentPresenter.ContentTemplate>
    </ContentPresenter>
  </DataTemplate>

  <!-- FunnelChartLegendItemBadge-->
  <DataTemplate x:Key="FunnelChartLegendItemBadgeTemplate">
    <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding}">
      <ContentPresenter.ContentTemplate>
        <DataTemplate>
          <Rectangle Stroke="{Binding ItemOutline}" Fill="{Binding ItemBrush}" />
        </DataTemplate>
      </ContentPresenter.ContentTemplate>
    </ContentPresenter>
  </DataTemplate>

  <!-- LegendItemRectBadgeTemplate -->
  <DataTemplate x:Key="LegendItemRectBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeLineJoin="Round" StrokeThickness="{Binding Series.Thickness}" Width="13" Height="13" />
      <ContentPresenter Width="11" Height="11" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}" />
    </Grid>
  </DataTemplate>

  <!-- LegendItemMarkerlessRectBadgeTemplate -->
  <DataTemplate x:Key="LegendItemMarkerlessRectBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" Width="13" Height="13" StrokeLineJoin="Round" />
    </Grid>
  </DataTemplate>

  <!-- LegendItemLineBadgeTemplate -->
  <DataTemplate x:Key="LegendItemLineBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Rectangle VerticalAlignment="Center" StrokeThickness="3" Fill="{Binding Series.ActualBrush}" Height="3" RadiusX="1" RadiusY="1" />
      <ContentPresenter Width="13" Height="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}" />
    </Grid>
  </DataTemplate>

  <!-- LegendItemMarkerlessLineBadgeTemplate -->
  <DataTemplate x:Key="LegendItemMarkerlessLineBadgeTemplate">
    <Grid Width="18" Height="16" Margin="0 0 2 0">
      <Line VerticalAlignment="Center" HorizontalAlignment="Center" X1="0" Y1="0" X2="16" Y2="0" Stroke="{Binding Series.ActualBrush}" StrokeThickness="{Binding Series.Thickness}" StrokeEndLineCap="{Binding Series.EndCap}" StrokeStartLineCap="{Binding Series.StartCap}" />
    </Grid>
  </DataTemplate>

  <!-- LegendItemPointBadgeTemplate -->
  <DataTemplate x:Key="LegendItemPointBadgeTemplate">
    <ContentPresenter Width="13" Height="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}" />
  </DataTemplate>

  <!-- LegendItemFinancialBadgeTemplate -->
  <DataTemplate x:Key="LegendItemFinancialBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Grid Width="13" Height="13">
        <Rectangle Fill="{StaticResource LegendItemBadgeBackgroundBrush}" Width="13" Height="13" Margin="0" />
        <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" StrokeLineJoin="Round" VerticalAlignment="Top" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
        <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Fill="{Binding Series.NegativeBrush}" Margin="0" UseLayoutRounding="False" StrokeLineJoin="Round" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
      </Grid>
    </Grid>
  </DataTemplate>

  <!-- LegendItemFinancialIndicatorBadgeTemplate -->
  <DataTemplate x:Key="LegendItemFinancialIndicatorBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Grid Width="13" Height="13">
        <Rectangle Fill="{StaticResource LegendItemBadgeBackgroundBrush}" Width="13" Height="13" Margin="0" />
        <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" StrokeLineJoin="Round" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
        <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Fill="{Binding Series.NegativeBrush}" StrokeLineJoin="Round" Margin="0" UseLayoutRounding="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
      </Grid>
    </Grid>
  </DataTemplate>

  <!-- LegendItemPositiveNegativeBadgeTemplate -->
  <DataTemplate x:Key="LegendItemPositiveNegativeBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Grid Width="13" Height="13">
        <Rectangle Fill="{StaticResource LegendItemBadgeBackgroundBrush}" Width="13" Height="13" Margin="0" />
        <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" StrokeLineJoin="Round" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
        <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Fill="{Binding Series.NegativeBrush}" Margin="0" StrokeLineJoin="Round" UseLayoutRounding="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" />
      </Grid>
      <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}" />
    </Grid>
  </DataTemplate>

  <!-- LegendItemHighDensityBadgeTemplate -->
  <DataTemplate x:Key="LegendItemHighDensityBadgeTemplate">
    <Grid Width="19" Height="13" Margin="0,0,5,0">
      <Rectangle Fill="{StaticResource LegendItemBadgeBackgroundBrush}" Width="13" Height="13" Margin="0" />
      <!-- rising path -->
      <Path Width="13" Height="12" VerticalAlignment="Top" HorizontalAlignment="Center" StrokeThickness="{Binding Series.Thickness}">
        <Path.Fill>
          <SolidColorBrush Color="{Binding Series.HeatMaximumColor}" />
        </Path.Fill>
        <Path.Stroke>
          <SolidColorBrush Color="{Binding Series.HeatMaximumColor}" />
        </Path.Stroke>
        <Path.Data>
          <PathGeometry>
            <PathFigure StartPoint="0, 5" IsFilled="True">
              <PathFigure.Segments>
                <LineSegment Point="0, 12" />
                <LineSegment Point="13, 0" />
                <LineSegment Point="5, 0" />
                <ArcSegment Size="0, 0" IsLargeArc="False" Point="0, 0" />
              </PathFigure.Segments>
            </PathFigure>
          </PathGeometry>
        </Path.Data>
      </Path>

      <Path Width="13" Height="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" StrokeThickness="{Binding Series.Thickness}">
        <Path.Fill>
          <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
        </Path.Fill>
        <Path.Stroke>
          <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
        </Path.Stroke>
        <Path.Data>
          <PathGeometry>
            <PathFigure StartPoint="0, 12" IsFilled="True">
              <PathFigure.Segments>
                <LineSegment Point="11, 12" />
                <ArcSegment Size="0, 0" IsLargeArc="False" Point="13, 12" />
                <LineSegment Point="13, 0" />
              </PathFigure.Segments>
            </PathFigure>
          </PathGeometry>
        </Path.Data>
      </Path>
    </Grid>
  </DataTemplate>

