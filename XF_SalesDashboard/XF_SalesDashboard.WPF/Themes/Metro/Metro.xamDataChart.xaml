  <!-- PieChartLegendItem-->
  <DataTemplate x:Key="PieLegendItemTemplate">
    <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
      <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" />
      <ContentControl FontSize="14.667" FontFamily="Segoe UI">
        <ContentControl.Resources>
          <Style TargetType="ContentControl">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
          </Style>
        </ContentControl.Resources>
        <ContentPresenter Content="{Binding ItemLabel, TargetNullValue=Pie Item}" />
      </ContentControl>
