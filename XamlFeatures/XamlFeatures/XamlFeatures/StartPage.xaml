<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlFeatures.StartPage"
             Title="XAML Features">
  <ScrollView>
    <StackLayout Padding="16"
                 Spacing="8">
      <Button Text="StylesPage"
              Clicked="ButtonClicked"/>
      <Button Text="ResourcesPage"
              Clicked="ButtonClicked"/>
      <Button Text="TriggersPage"
              Clicked="ButtonClicked"/>
      <Button Text="BehaviorsPage"
              Clicked="ButtonClicked"/>
      <Button Text="ValueConverterPage"
              Clicked="ButtonClicked"/>
      <Button Text="DataTemplatePage"
              Clicked="ButtonClicked"/>
      <Button Text="DataBindingPage"
              Clicked="ButtonClicked"/>
      <!-- TODO: Command="{Binding GoToCommand}" CommandParameter="FooPage" とDictionaryを活用してコマンドでページ遷移する -->
    </StackLayout>
  </ScrollView>
</ContentPage>